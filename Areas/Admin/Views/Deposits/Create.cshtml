@using MyMoney.Data.Models.Enums
@model MyMoney.Data.Models.Deposit

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body text-center">
        <h4 class="card-title">Deposit</h4>
        <hr />
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group row">
                        <div class="col-md-6">
                            <label asp-for="MinimalAmount" class="control-label">Minimal Amount</label>
                            <input asp-for="MinimalAmount" class="form-control" />
                            <span asp-validation-for="MinimalAmount" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Currency" class="control-label">Currency</label>
                            <select asp-for="Currency" class="form-control">
                                @foreach (var currency in Enum.GetValues(typeof(Currency)))
                                {
                                    <option value="@((Currency)currency)" selected="@(Model.Currency == (Currency)currency)">@currency</option>
                                }
                            </select>
                            <span asp-validation-for="Currency" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Term" class="control-label">Term</label>
                        <input asp-for="Term" class="form-control" />
                        <span asp-validation-for="Term" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-6">
                            <label asp-for="AnnualInterestRate" class="control-label">Annual Interest Rate</label>
                            <input asp-for="AnnualInterestRate" class="form-control" />
                            <span asp-validation-for="AnnualInterestRate" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="ClientType" class="control-label">Client Type</label>
                            <select asp-for="ClientType" class="form-control">
                                @foreach (var clientType in Enum.GetValues(typeof(ClientType)))
                                {
                                    <option value="@((ClientType)clientType)" selected="@(Model.ClientType == (ClientType)clientType)">@clientType</option>
                                }
                            </select>
                            <span asp-validation-for="ClientType" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="InterestPayment" class="control-label">Interest Payment</label>
                        <select asp-for="InterestPayment" class="form-control">
                            @foreach (var interestPayment in Enum.GetValues(typeof(InterestPayment)))
                            {
                                <option value="@((InterestPayment)interestPayment)" selected="@(Model.InterestPayment == (InterestPayment)interestPayment)">@interestPayment</option>
                            }
                        </select>
                        <span asp-validation-for="InterestPayment" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <input class="form-check-input" asp-for="IsInterestFixed" />
                        <label class="form-check-label" asp-for="IsInterestFixed">Is Interest Fixed</label>
                    </div>
                    <div class="form-group form-check">
                        <input class="form-check-input" asp-for="OverdraftFacility" />
                        <label class="form-check-label" asp-for="OverdraftFacility">Overdraft Facility</label>
                    </div>
                    <div class="form-group form-check">
                        <input class="form-check-input" asp-for="CreditFacility" />
                        <label class="form-check-label" asp-for="CreditFacility">Credit Facility</label>
                    </div>
                    <div class="form-group text-center">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="mt-3 text-center">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

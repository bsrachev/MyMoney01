@using MyMoney.Data.Models.Enums
@model MyMoney.Data.Models.Insurrance

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Insurrance</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoverageAmount" class="control-label"></label>
                <input asp-for="CoverageAmount" class="form-control" />
                <span asp-validation-for="CoverageAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item" class="control-label">Item</label>
                <select asp-for="Item" class="form-control">
                    @foreach (var item in Enum.GetValues(typeof(InsuredItem)))
                    {
                        <option value="@((InsuredItem)item)" selected="@(Model.Item == (InsuredItem)item)">@item</option>
                    }
                </select>
                <span asp-validation-for="Item" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinimalAmount" class="control-label"></label>
                <input asp-for="MinimalAmount" class="form-control" />
                <span asp-validation-for="MinimalAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Currency" class="control-label">Currency</label>
                <select asp-for="Currency" class="form-control">
                    @foreach (var currency in Enum.GetValues(typeof(Currency)))
                    {
                        <option value="@((Currency)currency)" selected="@(Model.Currency == (Currency)currency)">@currency</option>
                    }
                </select>
                <span asp-validation-for="Currency" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Term" class="control-label"></label>
                <input asp-for="Term" class="form-control" />
                <span asp-validation-for="Term" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnnualInterestRate" class="control-label"></label>
                <input asp-for="AnnualInterestRate" class="form-control" />
                <span asp-validation-for="AnnualInterestRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

